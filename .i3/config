set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+t exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill; exec killall -USR1 i3status

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+j focus left; exec killall -USR1 i3status
bindsym $mod+k focus down; exec killall -USR1 i3status
bindsym $mod+l focus up; exec killall -USR1 i3status
bindsym $mod+semicolon focus right; exec killall -USR1 i3status

#no mouse focus
focus_follows_mouse no

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left; exec killall -USR1 i3status
bindsym $mod+Down focus down; exec killall -USR1 i3status
bindsym $mod+Up focus up; exec killall -USR1 i3status
bindsym $mod+Right focus right; exec killall -USR1 i3status

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen
popup_during_fullscreen smart

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking; exec killall -USR1 i3status
bindsym $mod+w layout tabbed; exec killall -USR1 i3status
bindsym $mod+e layout toggle split; exec killall -USR1 i3status

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle; exec killall -USR1 i3status

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle; exec killall -USR1 i3status

# focus the parent container
bindsym $mod+a focus parent; exec killall -USR1 i3status

# focus the child container
#bindsym $mod+Shift+d focus child; exec killall -USR1 i3status

# switch to workspace
bindsym $mod+1  exec killall -USR1 i3status; workspace "1: Skype"
bindsym $mod+2  exec killall -USR1 i3status; workspace "2: term"
bindsym $mod+3  exec killall -USR1 i3status; workspace "3: Web"
bindsym $mod+4  exec killall -USR1 i3status; workspace "4: IDE"
bindsym $mod+5  exec killall -USR1 i3status; workspace "5: Chromium"
bindsym $mod+6  exec killall -USR1 i3status; workspace "6: emacs"
bindsym $mod+7  exec killall -USR1 i3status; workspace "7: doc"
bindsym $mod+8  exec killall -USR1 i3status; workspace "8: misc"
bindsym $mod+9  exec killall -USR1 i3status; workspace "9: random"
bindsym $mod+0  exec killall -USR1 i3status; workspace "10: mail"

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace "1: Skype"; exec killall -USR1 i3status
bindsym $mod+Shift+2 move container to workspace "2: term"; exec killall -USR1 i3status
bindsym $mod+Shift+3 move container to workspace "3: Web"; exec killall -USR1 i3status
bindsym $mod+Shift+4 move container to workspace "4: IDE"; exec killall -USR1 i3status
bindsym $mod+Shift+5 move container to workspace "5: Chromium"; exec killall -USR1 i3status
bindsym $mod+Shift+6 move container to workspace "6: emacs"; exec killall -USR1 i3status
bindsym $mod+Shift+7 move container to workspace "7: doc"; exec killall -USR1 i3status
bindsym $mod+Shift+8 move container to workspace "8: misc"; exec killall -USR1 i3status
bindsym $mod+Shift+9 move container to workspace "9: random"; exec killall -USR1 i3status
bindsym $mod+Shift+0 move container to workspace "10: mail"; exec killall -USR1 i3status




# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar
{
	id bar-1
	position bottom
	status_command i3status -c ~/.i3/i3status.config

	colors
	{
        	background #000000
	        statusline #ffffff
        	separator #666666

	        focused_workspace  #4c7899 #285577 #ffffff
        	active_workspace   #333333 #5f676a #ffffff
	        inactive_workspace #333333 #222222 #888888
        	urgent_workspace   #2f343a #900000 #ffffff
	}

}

bar
{
	id bar-2
	workspace_buttons no
	binding_mode_indicator no
	position top
	tray_output none
	status_command ~/.i3/focus.sh ~/.i3/i3status2.config

	colors
	{
        	background #000000
	        statusline #ffffff
        	separator #666666
	}
}

#borders
new_window pixel 2

# lock
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

# workspace output
#workspace 1 "Skype" to output right
#workspace 2 "bash" to output right
#workspace 3 "Web" to output right
bindsym $mod+shift+x move workspace to output left
bindsym $mod+shift+s exec ~/.i3/output

# assign to workspaces
assign [class="Skype"] → "1: Skype"
assign [class="URxvt"] → "2: term"
assign [class="Google-chrome-stable"] → "3: Web"
assign [class="jetbrains-phpstorm"] → "4: IDE"
assign [class="jetbrains-pycharm"] → "4: IDE"
assign [class="Chromium"] → "5: Chromium"
assign [class="Emacs"] → "6: emacs"
assign [class="(?i)thunderbird"] → "10: mail"

# kb layout
exec setxkbmap -layout us,ru -variant -option grp:caps_toggle,grp_led:scroll,terminate:ctrl_alt_bksp

bindsym $mod+shift+plus exec mpc volume +5
bindsym $mod+shift+minus exec mpc volume -5
bindsym Print exec zscreen

exec ~/.i3/startup.sh
